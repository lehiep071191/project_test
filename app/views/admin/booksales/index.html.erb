<style type="text/css">

</style>
<%= link_to 'new', new_admin_booksale_path %>
<table id = "customers">
	<tr>
		<th>
			Tên sách
		</th>	
		<th>
			Thể loại
		</th>
		<th>
			Giá
		</th>
		<th>
			Ngày nhập
		</th>
		<th>
			Giảm Giá
		</th>
		<th>
			Chỉnh sửa
		</th>
	</tr>

	<% @booksales.each do |booksale| %>
		<tr>
			<td>
				<%= booksale.name %>
			</td>
			<td>
				<%= booksale.category %>
			</td>
			<td>
				<%= booksale.price %>
			</td>
			<td>
				<%= time_ago_in_words(booksale.created_at) %>
			</td>
			<td>
				<% if booksale.discount.to_i > 0 %>
					<%= booksale.discount  %> %
				<% end %>	
			</td>
			<td>
				<%= link_to 'edit', edit_admin_booksale_path(booksale) %>
			</td>
		</tr>
		
		
	
<% end %>

</table>
